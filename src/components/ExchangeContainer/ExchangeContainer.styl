
.main-exchange-container
  width: 100%
  height: auto
  padding-top: 70px
  padding-bottom: 30px
  text-align: center

  .main-exchange-container--title
    width: 90%
    min-width: 288px
    max-width: 900px
    margin: 0 auto


    h2
      margin-bottom: 30px
      font-size: 2.4rem
      line-height: 2.6rem
      font-weight: bold
      color: #282623

    p
      margin-bottom: 30px
      font-size: 1.4rem
      font-weight: 500
      line-height: 1.6rem
      color: #757575

  .main-tables-container
    display: flex
    padding-left: 20px
    padding-right: 20px
    gap: 10px
    overflow-x: scroll
    overscroll-behavior-x: contain
    scroll-snap-type: x proximity

  .main-currency-table
    width: 70%
    min-width: 235px
    max-width: 500px
    height: 360px
    margin: 0 auto
    scroll-snap-align: center
    font-family: "Inter", sans-serif

  .main-currency-table .currency-table--title
    margin-bottom: 15px
    font-size: 1.8rem
    font-weight: bold
    line-height: 2rem
    color: #F7931A

  .currency-table--container
    width: 70%
    min-width: 230px
    max-width: 300px
    height: 180px
    margin: 0 auto

  .currency-table--container table
    width: 100%
    height: 100%

  .currency-table--container td
    width: 50%
    font-size: 1.6rem
    font-weight: 500
    line-height: 1.9rem
    color: #BABABA
    background-color: #fff

  .currency-table--container .table__top-left
    border-radius: 15px 0 0 0

  .currency-table--container .table__top-right
    border-radius: 0 15px 0 0

  .currency-table--container .table__bottom-left
    border-radius: 0 0 0 15px

  .currency-table--container .table__bottom-right
    border-radius: 0 0 15px 0

  .currency-table--container .table__right
    font-size: 1.4rem
    font-weight: normal
    line-height: 1.7rem
    color: #757575

  .upDown
    width: 12px
    height: 10px
    margin-left: 10px

  .main-tables-container .currency-table2--title
    margin-bottom: 15px
    font-size: 1.8rem
    font-weight: bold
    line-height: 2rem
    color: #1A9AF7

  .currency-table__date
    width: 190px
    height: 30px
    margin: 0 auto
    margin-top: 15px
    padding: 8px
    background-color: #FFE9D5
    border-radius: 8px
    margin-bottom: 25px

  .currency-table__date p
    font-size: 1.2rem
    font-weight: 300
    line-height:1.5rem
    color:#201E1C


  .currency-table2__date
    width: 190px
    height: 30px
    margin: 0 auto
    margin-top: 15px
    padding: 8px
    background-color: #E7F5FF
    border-radius: 8px
    margin-bottom: 25px

  .currency-table2__date p
    font-size: 1.2rem
    font-weight: 300
    line-height:1.5rem
    color:#201E1C