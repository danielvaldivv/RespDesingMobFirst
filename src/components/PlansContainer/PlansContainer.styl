
.main-plans-container
  width: 100%
  min-width: 320px
  padding-bottom: 70px
  text-align: center
  display: flex;
  flex-direction: column;
  align-items: center;

.plans--title
  width: 90%
  min-width: 288px
  height: auto
  margin: 0 auto
  margin-bottom: 50px

.plans--title h2
  padding-top: 50px
  font-size: 2.4rem
  font-weight: bold
  line-height: 2.6rem
  color:var( --black)

.plans--title p
  padding-top: 30px
  font-size: 1.4rem
  font-weight: 500
  line-height: 1.8rem
  color: #757575

.plans-container--slider
  display: flex
  padding-right: 30px
  padding-left: 30px
  gap: 15px
  height: 316px
  overflow-x: scroll
  overscroll-behavior-x: contain
  scroll-snap-type: x proximity


.plans-container--card
  position: relative
  scroll-snap-align: center
  width: 65%
  min-width: 190px
  max-width: 300px
  height: auto
  margin: 50px 10px 0
  padding: 0 15px
  background-color: var(--just-white)
  border-radius: 15px
  box-shadow: 0 4px 8px rgba(89,73,30, 0.16 )

.recommended
  position: absolute
  width: 120px
  height: 31px
  background-color: var(--bitcoin-orange)
  top: -15px
  left: calc(50% - 60px)
  border-radius: 8px
  box-shadow: 0 4px 8px rgba(89,73,30, 0.16 )
  color: var(--just-white)
  font-size: 1.2rem
  padding:6px

.plan-card--title
  padding-top: 30px
  font-size: 1.4rem
  font-weight: 500
  line-height: 1.8rem
  color: black

.plan-card--prince
  padding: 5px 0
  font-size: 5.2rem
  font-weight: bold
  line-height: 5.4rem
  color: black

.plan-card--prince span
  font-size: 1.5rem
  font-weight: 300
  vertical-align: 25px

.plan-card-saving
  font-size: 1.2rem
  color: #757575

.plan-card--ca
  width: 100%
  height: 48px
  margin-top: 20px
  background-color:#FAF8F7
  border: 2px solid var(--bitcoin-orange)
  border-radius: 5px
  font-size: 1.4rem
  font-weight: bold
  line-height: 1.8rem
  color: var(--black)
  font-family: "DM Sans", sans-serif
  display: flex
  justify-content: center
  align-content: center

.plan-card--ca img
  display: inline-block
  width: 18px
  height: 18px
  margin-left: 8px

